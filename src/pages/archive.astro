            {allCategories.map(cat => (
              <button 
                data-category-filter={cat}
                class="category-filter-btn text-xs font-medium text-[var(--text-secondary)] bg-gray-100 py-1 px-3 rounded-full hover:bg-gray-200 transition-colors"
              >
                {cat}
