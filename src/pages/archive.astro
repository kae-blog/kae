  <script>
    // ç¢ºä¿åœ¨ Astro é é¢è½‰å ´æ™‚ä¹Ÿèƒ½æ­£ç¢ºåŸ·è¡Œ
    document.addEventListener('astro:page-load', () => {
      
      const searchInput = document.getElementById('search-input');
      const filterButtons = document.querySelectorAll('.category-filter-btn');
      // ğŸ‘‡ ä¿®æ”¹ï¼šé¸æ“‡å™¨æ”¹æŠ“ .article-card-wrapper
      const articleWrappers = document.querySelectorAll('.article-card-wrapper');
      const noResultsMessage = document.getElementById('no-results-message');

      if (!searchInput) return;

      let currentSearch = '';
      let currentCategory = 'all';

      // è®€å– URL åƒæ•¸
      const urlParams = new URLSearchParams(window.location.search);
      const queryFromUrl = urlParams.get('q');

      if (queryFromUrl) {
        (searchInput as HTMLInputElement).value = queryFromUrl;
        currentSearch = queryFromUrl.toLowerCase().trim();
      }

      function runFilter() {
        let visibleCount = 0;
        
        articleWrappers.forEach(wrapper => {
          const el = wrapper as HTMLElement;
          const searchText = el.dataset.searchText || '';
          const categories = el.dataset.category || '';

          const matchesSearch = searchText.includes(currentSearch);
          const matchesCategory = currentCategory === 'all' || categories.includes(currentCategory);

          if (matchesSearch && matchesCategory) {
            // å¦‚æœç¬¦åˆï¼Œé¡¯ç¤º (block æˆ– grid å…§çš„é è¨­)
            el.style.display = 'block';
            visibleCount++;
          } else {
            el.style.display = 'none';
          }
        });

        if (noResultsMessage) {
          noResultsMessage.style.display = visibleCount === 0 ? 'block' : 'none';
        }
      }

      searchInput.addEventListener('input', (e) => {
        currentSearch = (e.target as HTMLInputElement).value.toLowerCase().trim();
        runFilter();
      });

      filterButtons.forEach(button => {
        button.addEventListener('click', () => {
          filterButtons.forEach(btn => {
            btn.classList.remove('active', 'text-white', 'bg-[var(--accent-color)]');
            btn.classList.add('text-[var(--text-secondary)]', 'bg-gray-100'); 
          });
          
          button.classList.add('active', 'text-white', 'bg-[var(--accent-color)]');
          button.classList.remove('text-[var(--text-secondary)]', 'bg-gray-100'); 
          
          currentCategory = button.getAttribute('data-category-filter') || 'all';
          runFilter();
        });
      });

      runFilter();
    });
  </script>
