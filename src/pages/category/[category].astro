<script>
  // è®“ <head> ä¸­çš„ ViewTransitions API çŸ¥é“é€™å€‹é é¢æœ‰å‹•æ…‹å…§å®¹
  document.addEventListener('astro:page-load', () => {
    
    // é€™æ˜¯çµ¦ PostCardBox è£¡é¢çš„è…³æœ¬ä½¿ç”¨çš„ï¼Œè®“å®ƒçŸ¥é“è¦æŠ“å“ªå¹¾å€‹ DOM å…ƒç´ 
    const searchInput = document.getElementById('search-input');
    const articleWrappers = document.querySelectorAll('.article-card-wrapper');
    const noResultsMessage = document.getElementById('no-results-message');

    if (!searchInput || !articleWrappers || !noResultsMessage) return;

    let currentSearch = '';
    
    // è®€å– URL åƒæ•¸ (ä¾†è‡ªé é¦–çš„æœå°‹)
    const urlParams = new URLSearchParams(window.location.search);
    const queryFromUrl = urlParams.get('q');

    if (queryFromUrl) {
      (searchInput as HTMLInputElement).value = queryFromUrl;
      currentSearch = queryFromUrl.toLowerCase().trim();
    }

    function runSearchFilter() {
      let visibleCount = 0;
      const searchTerm = currentSearch; 

      if (articleWrappers) {
        articleWrappers.forEach(wrapper => {
          const el = wrapper as HTMLElement;
          const searchText = el.dataset.searchText || '';
          
          // æ¢ä»¶: æœå°‹æ–‡å­—
          const matchesSearch = searchTerm === '' || searchText.includes(searchTerm);
          
          // ä¿®æ­£ï¼šå› ç‚ºé€™å€‹æ˜¯åˆ†é¡é ï¼Œå…§å®¹æœ¬èº«å·²ç¶“è¢«éæ¿¾éäº†ï¼Œæ‰€ä»¥æˆ‘å€‘åªéœ€è¦æœå°‹
          if (matchesSearch) {
            el.style.display = 'block'; 
            visibleCount++;
          } else {
            el.style.display = 'none';
          }
        });
      }

      if (noResultsMessage) {
        noResultsMessage.style.display = visibleCount === 0 ? 'block' : 'none';
      }
    }

    // ç›£è½æœå°‹æ¡†è¼¸å…¥
    searchInput.addEventListener('input', (e) => {
      currentSearch = (e.target as HTMLInputElement).value.toLowerCase().trim();
      runSearchFilter();
    });

    // é é¢è¼‰å…¥æ™‚ï¼Œç«‹å³åŸ·è¡Œä¸€æ¬¡ç¯©é¸ (è™•ç† URL å¸¶ä¾†çš„é—œéµå­—)
    runSearchFilter();
  });
</script>
