---
// src/pages/about.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import author from '../data/author.json';

// 處理 \n 換行符號，將它們轉換為 <br>
const formattedBio = author.fullBio.replaceAll('\n', '<br />');
---
<BaseLayout
  pageTitle={` ${author.name}`}
  description={author.footerBio}
>

<article class="max-w-3xl mx-auto bg-[var(--bg-card)] rounded-xl shadow-lg p-8 md:p-12">        
        <div class="flex flex-col md:flex-row items-center">
<img 
  src={author.avatar} 
  alt={`${author.name} 的大頭照`}
  class="w-40 h-40 md:w-48 md:h-48 mb-6 md:mb-0 md:mr-10 flex-shrink-0 rounded-full"
>
            
                        <div class="w-full text-left">
                              <h2 class="text-3xl md:text-4xl font-bold text-[var(--text-primary)] mb-4"> {author.name}</h2>
                <div class="prose max-w-none">
                    <p class="text-xl leading-relaxed" set:html={formattedBio} />
                </div>
            </div>
        </div>

    </article>

</BaseLayout>
